      <section id="Compare">
        <div class="container-fluid">

          <form method="GET" action="/" class="Search-product">
            <input type="text" placeholder="Search Product for Comparision" name="searchProductUrl" autocomplete="off" required/>
            <button><i class="uil uil-arrow-right"></i></button>
          </form>

          <div class="d-flex justify-content-center flex-wrap">
            <div class="col-md-6 d-flex justify-content-center">
                <div class="card w-75 mt-2">
                  <div class="d-flex justify-content-center">
                    <img
                    src="assets/img/gem-new-logo-v2.png"
                    class="card-img-top mt-2 m-3 mb-0 "
                    alt="..."
                    style="width: 100px"
                  />
                  </div>
                  <hr />
                  <div
                    id="carouselExampleControls"
                    class="carousel slide"
                    data-bs-ride="carousel"
                  >
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img
                          src="<%= allWebProducts.productDetails.images[0] %>"
                          class="d-block m-auto"
                          alt="..."
                          style="
                            height: 150px;
                          "
                        />
                      </div>
                      <% for(let i=1;i<allWebProducts.productDetails.images.length;i++){ %>
                        <div class="carousel-item">
                            <img
                              src="<%= allWebProducts.productDetails.images[i] %>"
                              class="d-block m-auto"
                              alt="..."
                              style="
                                height: 150px;
                              "
                            />
                          </div>
                          <% } %>
                      
                    </div>
                    <button
                      class="carousel-control-prev"
                      style="filter: invert(100%);"
                      type="button"
                      data-bs-target="#carouselExampleControls"
                      data-bs-slide="prev"
                    >
                      <span
                        class="carousel-control-prev-icon"
                        aria-hidden="true"
                      ></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button
                      class="carousel-control-next"
                      style="filter: invert(100%);"
                      type="button"
                      data-bs-target="#carouselExampleControls"
                      data-bs-slide="next"
                    >
                      <span
                        class="carousel-control-next-icon"
                        aria-hidden="true"
                      ></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>
                  <div class="card-body"style="max-height:150px">
                    <h4 class="card-title mb-0 fw-bold"><%= allWebProducts.productDetails.productName %></h4>
                  </div>
                  <div class="d-flex justify-content-between align-items-center mx-3 mt-0">
                    <span
                    class="h4 text-success fw-bold me-2"
                    ><%= allWebProducts.productDetails.productPrice %></span>
                  <span class="h6 text-danger fw-bold"><%= allWebProducts.productDetails.discount %> Off</span>
                  </div>
                  <p class="h5 m-3 mt-2 mb-0"><b>Product Details</b></p>

                  <div class="d-flex m-2 mx-3">
                    <div class="w-50 me-3">
                      <h6>Price for :</h6>
                      <h6>Availability :</h6>
                      <h6>Min. Quantity :</h6>
                      <h6>Origin Country :</h6>
                      <h6>MII Percentage :</h6>
                    </div>
                    <div class="w-50">
                      <h6><%=allWebProducts.productDetails.priceFor %></h6>
                      <h6><%=allWebProducts.productDetails.availability %></h6>
                      <h6><%=allWebProducts.productDetails.minQty %></h6>
                      <h6><%=allWebProducts.productDetails.originCountry %></h6>
                      <h6><%=allWebProducts.productDetails.miiPercentage %></h6>
                    </div>
                  </div>
  
                  <p class="h5 m-3 mt-2 mb-2"><b>Specifications</b></p>
                  <% for(let i=0;i<Object.keys(allWebProducts.specifications).length;i++){ %>
                    <div class="d-flex m-1 mx-3">                    
                      <h6 class="w-50 me-3"><%= Object.keys(allWebProducts.specifications)[i] %> :</h6>
                      <h6 class="w-50"><%=Object.values(allWebProducts.specifications)[i] %> </h6>
                     </div>
                    <% } %>
                </div>
            </div>
  
            <div class="col-md-6 d-flex flex-wrap justify-content-center">
               <% for(let i=0;i<allWebProducts.webProducts.length;i++){ %>
                <div class="card m-3 w-25 d-flex flex-column"style="font-size:10px;font-style:bold;" >

                  <img src="<%= allWebProducts.webProducts[i].imageUrl %>" height="150px" alt="" class="m-2 image-fluid"/>
                  
                  <div class="p-3 py-0 fw-bold" style="min-height: 90px;">
                    <p class="card-title-compare" ><%= allWebProducts.webProducts[i].productTitle %></p>
                  </div>

                  <ul class="list-group list-group-flush">
                    <li class="list-group-item fw-bold"><%= allWebProducts.webProducts[i].price %></li>
                    <li class="list-group-item fw-bold"><%= allWebProducts.webProducts[i].emarketplace %></li>
                    <li class="list-group-item fw-bold text-success" style="min-height: 45px;"><%= allWebProducts.webProducts[i].deliveryCharge %></li>
                    <li class="list-group-item d-flex justify-content-center"><a target="_blank" href="<%= allWebProducts.webProducts[i].productUrl %>"><button type="button"class="btn bg-primary text-light border-0 rounded-1 px-2 py-1 fw-bold" style="width: 70px;font-size:10px;">Visit Site</button></a></li>
                  </ul>

                </div>
                <% } %>
  
             </div>
          </div>
        </div>
      </section>
  
